<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlActivated">@color/green</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Background</item>
    </style>

    <style name="ActionBar.Solid.Background" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/green</item>
    </style>


    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:divider">@color/green</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:showDividers">beginning</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!-- Required for pre-Lollipop. -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-4.0dip</item>
    </style>

    <style name="MyPreferenceTheme" parent="@android:style/Theme.Dialog">
        <item name="android:listSeparatorTextViewStyle">@style/ListSeparator</item>
        <item name="android:listPreferredItemPaddingLeft">10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
        <item name="android:textSize">@dimen/fontsize.settings.item</item>
        <item name="android:gravity">left</item>
        <item name="android:listDivider">@color/green</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:dialogTitle">PreferenceTitleDialogStyle</item>
        <item name="android:dialogTheme">@style/PreferenceDialogStyle</item>
        <item name="android:alertDialogTheme">@style/PreferenceDialogStyle</item>
    </style>

    <style name="PreferenceDialogStyle" parent="@style/Base.V7.Theme.AppCompat.Dialog">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ListSeparator">
        <item name="android:background">@color/green</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/fontsize.settings.group</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:divider">@color/green</item>
        <item name="android:dividerHeight">5dp</item>
        <item name="android:listDivider">@color/green</item>
    </style>

    <style name="green_button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/green_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="orange_button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/orange_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="dividerTableRow">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="SemiTransparentActionBarTheme"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/TransparentActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/TransparentActionBar</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="TransparentActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/green.camera</item>
        <!--Compatibility-->
        <item name="background">@color/green.camera</item>
    </style>

</resources>
