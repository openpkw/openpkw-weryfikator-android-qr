<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/thumbnails.label.top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding.committee.label"
        android:paddingTop="@dimen/padding.committee.label"
        android:paddingLeft="@dimen/padding.committee.label"
        android:paddingRight="@dimen/padding.committee.label"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/scan_qr_label_enter_data"
        android:gravity="center"
        android:background="@android:color/white"
        android:textSize="@dimen/fontsize.committee.label" />

    <View
        android:id="@+id/thumbnails.separator.top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height.login.separator.top"
        android:layout_below="@id/thumbnails.label.top"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/thumbnails.label.committee.id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/thumbnails.separator.top"
        android:paddingLeft="@dimen/padding.committee.label"
        android:paddingRight="@dimen/padding.committee.label"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:paddingTop="@dimen/padding.committee.label"
        android:paddingBottom="@dimen/padding.committee.label"
        android:text="@string/committee_label"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:textSize="@dimen/fontsize.committee.label" />

    <View
        android:id="@+id/thumbnails.committee.label.separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height.login.separator.top"
        android:layout_below="@id/thumbnails.label.committee.id"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:id="@+id/thumbnails.committee.id.layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumbnails.committee.label.separator"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/thumbnails.periphery.number"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingBottom="@dimen/padding.committee.label"
            android:paddingTop="@dimen/padding.committee.label"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:text="Nr obwodu"
            android:textSize="@dimen/fontsize.committee.label"/>

        <TextView
            android:id="@+id/thumbnails.territorial.code"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingBottom="@dimen/padding.committee.label"
            android:paddingTop="@dimen/padding.committee.label"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:text="Kod terytorialny"
            android:textSize="@dimen/fontsize.committee.label"/>
    </LinearLayout>

    <View
        android:id="@+id/thumbnails.committee.id.separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height.login.separator.top"
        android:layout_below="@id/thumbnails.committee.id.layout"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/thumbnails.take.photo.label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumbnails.committee.id.separator"
        android:layout_marginStart="@dimen/margin.login.left"
        android:layout_marginEnd="@dimen/margin.login.left"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:text="Przesyłasz następujące zdjęcia:"
        android:textSize="@dimen/fontsize.committee.label" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/thumbnails.take.photo.label"
        android:layout_above="@+id/thumbnails.send.button">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/thumbnails.photos.layout"
                android:layout_width="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_height="match_parent"
                android:background="@color/light_gray_protocol"
                android:stretchColumns="1">

            </TableLayout>

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/thumbnails.send.button"
        android:layout_width="@dimen/width.login.button.register"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin.bottom.buttons"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="@string/scan.qr.buttonlabel.send"
        style="@style/orange_button"/>

</RelativeLayout>
