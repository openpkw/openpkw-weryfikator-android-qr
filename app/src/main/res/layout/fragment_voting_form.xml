<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/fvoting.scrollview"
        android:layout_above="@+id/fvoting.layout.buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fvoting.label.top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding.committee.label"
                android:paddingTop="@dimen/padding.committee.label"
                android:paddingLeft="@dimen/padding.committee.label"
                android:paddingRight="@dimen/padding.committee.label"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="0dp"
                android:text="Dane z protokoÅ‚u wyborczego:"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:textSize="@dimen/fontsize.committee.label" />

            <TextView
                android:id="@+id/fvoting.committee.label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fvoting.label.top"
                android:paddingBottom="@dimen/padding.committee.label"
                android:paddingTop="@dimen/padding.committee.label"
                android:paddingLeft="@dimen/padding.committee.label"
                android:paddingRight="@dimen/padding.committee.label"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="0dp"
                android:text="@string/committee_label"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fontsize.committee.label" />

            <View
                android:id="@+id/fvoting.committee.separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height.login.separator.top"
                android:layout_below="@+id/fvoting.committee.label"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:background="@android:color/black" />


            <LinearLayout
                android:id="@+id/fvoting.committee.id.layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fvoting.committee.separator"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fvoting.periphery.number"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingBottom="@dimen/padding.committee.label"
                    android:paddingTop="@dimen/padding.committee.label"
                    android:gravity="center"
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fontsize.committee.label"/>

                <TextView
                    android:id="@+id/fvoting.territorial.code"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingBottom="@dimen/padding.committee.label"
                    android:paddingTop="@dimen/padding.committee.label"
                    android:gravity="center"
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fontsize.committee.label"/>
            </LinearLayout>

            <View
                android:id="@+id/fvoting.committee.id.separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height.login.separator.top"
                android:layout_below="@+id/fvoting.committee.id.layout"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/fvoting.periphery.name"
                android:layout_below="@+id/fvoting.committee.id.separator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding.committee.label"
                android:paddingTop="@dimen/padding.committee.label"
                android:paddingLeft="@dimen/padding.committee.label"
                android:paddingRight="@dimen/padding.committee.label"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fontsize.committee.label"/>

            <View
                android:id="@+id/fvoting.committee.name.separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height.login.separator.top"
                android:layout_below="@+id/fvoting.periphery.name"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/fvoting.periphery.address"
                android:layout_below="@+id/fvoting.committee.name.separator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding.committee.label"
                android:paddingTop="@dimen/padding.committee.label"
                android:paddingLeft="@dimen/padding.committee.label"
                android:paddingRight="@dimen/padding.committee.label"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fontsize.committee.address"/>

            <View
                android:id="@+id/fvoting.committee.address.separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height.login.separator.top"
                android:layout_below="@+id/fvoting.periphery.address"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:background="@android:color/black" />


            <TableLayout
                android:id="@+id/fvoting.generaldata.layout"
                android:layout_below="@+id/fvoting.committee.address.separator"
                android:layout_width="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_height="match_parent"
                android:background="@color/light_gray_protocol"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="@dimen/padding.fvoting.general.data"
                        android:paddingEnd="0dp"
                        android:textColor="@android:color/black"
                        android:paddingBottom="@dimen/padding.committee.label"
                        android:paddingTop="@dimen/padding.committee.label"
                        android:textSize="@dimen/fontsize.committee.label"
                        android:text="@string/fvoting.total.entitled.to.vote.label" />

                    <TextView
                        android:id="@+id/fvoting.total.entitled.to.vote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="0dp"
                        android:paddingEnd="@dimen/padding.number.of.votes"
                        android:textColor="@android:color/black"
                        android:gravity="end"
                        android:paddingBottom="@dimen/padding.committee.label"
                        android:paddingTop="@dimen/padding.committee.label"
                        android:textSize="@dimen/fontsize.committee.label"
                         />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height.login.separator.bottom"
                        android:layout_weight="1"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="0dp"
                        android:background="@android:color/black" />

                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fvoting.total.voting.cards.label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="@dimen/padding.fvoting.general.data"
                        android:paddingEnd="0dp"
                        android:textColor="@android:color/black"
                        android:paddingBottom="@dimen/padding.committee.label"
                        android:paddingTop="@dimen/padding.committee.label"
                        android:textSize="@dimen/fontsize.committee.label"
                        android:text="@string/fvoting.votingcardsdistributed.label" />

                    <TextView
                        android:id="@+id/fvoting.total.voting.cards"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="0dp"
                        android:paddingEnd="@dimen/padding.number.of.votes"
                        android:textColor="@android:color/black"
                        android:gravity="end"
                        android:paddingBottom="@dimen/padding.committee.label"
                        android:paddingTop="@dimen/padding.committee.label"
                        android:textSize="@dimen/fontsize.committee.label"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height.login.separator.bottom"
                        android:layout_weight="1"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="0dp"
                        android:background="@android:color/black" />

                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fvoting.valid.cards.label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="@dimen/padding.fvoting.general.data"
                        android:paddingEnd="0dp"
                        android:textColor="@android:color/black"
                        android:paddingBottom="@dimen/padding.committee.label"
                        android:paddingTop="@dimen/padding.committee.label"
                        android:textSize="@dimen/fontsize.committee.label"
                        android:text="@string/fvoting.validcards.label" />

                    <TextView
                        android:id="@+id/fvoting.valid.cards"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="0dp"
                        android:paddingEnd="@dimen/padding.number.of.votes"
                        android:textColor="@android:color/black"
                        android:gravity="end"
                        android:paddingBottom="@dimen/padding.committee.label"
                        android:paddingTop="@dimen/padding.committee.label"
                        android:textSize="@dimen/fontsize.committee.label"
                       />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height.login.separator.bottom"
                        android:layout_weight="1"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="0dp"
                        android:background="@android:color/black" />

                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fvoting.invalid.votes.label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="@dimen/padding.fvoting.general.data"
                        android:paddingEnd="0dp"
                        android:textColor="@android:color/black"
                        android:paddingBottom="@dimen/padding.committee.label"
                        android:paddingTop="@dimen/padding.committee.label"
                        android:textSize="@dimen/fontsize.committee.label"
                        android:text="@string/fvoting.nonvalidvotes.label" />

                    <TextView
                        android:id="@+id/fvoting.invalid.votes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="0dp"
                        android:paddingEnd="@dimen/padding.number.of.votes"
                        android:textColor="@android:color/black"
                        android:gravity="end"
                        android:paddingBottom="@dimen/padding.committee.label"
                        android:paddingTop="@dimen/padding.committee.label"
                        android:textSize="@dimen/fontsize.committee.label"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height.login.separator.bottom"
                        android:layout_weight="1"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="0dp"
                        android:background="@android:color/black" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fvoting.valid.votes.label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="@dimen/padding.fvoting.general.data"
                        android:paddingEnd="0dp"
                        android:textColor="@android:color/black"
                        android:paddingBottom="@dimen/padding.committee.label"
                        android:paddingTop="@dimen/padding.committee.label"
                        android:textSize="@dimen/fontsize.committee.label"
                        android:text="@string/fvoting.validvotes.label" />

                    <TextView
                        android:id="@+id/fvoting.valid.votes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="0dp"
                        android:paddingEnd="@dimen/padding.number.of.votes"
                        android:textColor="@android:color/black"
                        android:gravity="end"
                        android:paddingBottom="@dimen/padding.committee.label"
                        android:paddingTop="@dimen/padding.committee.label"
                        android:textSize="@dimen/fontsize.committee.label"
                         />

                </TableRow>

            </TableLayout>

            <View
                android:id="@+id/fvoting.separator.button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height.login.separator.bottom"
                android:layout_below="@+id/fvoting.generaldata.layout"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:background="@android:color/black" />

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/fvoting.layout.buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin.bottom.buttons"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fvoting.forward.button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="@dimen/margin.login.button.login.top"
            android:text="@string/forward.label.button"
            style="@style/green_button"/>

        <Button
            android:id="@+id/fvoting.next.button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="@dimen/margin.login.button.login.top"
            android:text="@string/next.label.button"
            style="@style/orange_button"/>

    </LinearLayout>

</RelativeLayout>
