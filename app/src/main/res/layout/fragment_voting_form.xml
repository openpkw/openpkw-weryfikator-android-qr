<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/fvoting.scrollview"
        android:layout_above="@+id/fvoting.layout.buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/fvoting.protocol.data.tablelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin.protocol.data"
            android:layout_marginRight="@dimen/margin.protocol.data"
            android:layout_marginBottom="@dimen/margin.protocol.data"
            android:layout_marginTop="@dimen/margin.top.protocol.data"
            android:background="@drawable/protocol_border"
            android:stretchColumns="1">

            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rules.fragment.background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding.committee.label"
                    android:paddingRight="@dimen/padding.committee.label"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:paddingTop="@dimen/padding.committee.label"
                    android:paddingBottom="@dimen/padding.committee.label"
                    android:text="Dane z protokoÅ‚u wyborczego"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fontsize.committee.label" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height.login.separator.bottom"
                    android:layout_weight="1"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@android:color/black" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/fvoting.committee.data.spinner"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:spinnerMode="dropdown"
                    android:gravity="center_horizontal"
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height.login.separator.bottom"
                    android:layout_weight="1"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@android:color/black" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fvoting.periphery.number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/padding.committee.label"
                    android:paddingTop="@dimen/padding.committee.label"
                    android:gravity="center"
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/black"
                    android:text="Nr obwodu"
                    android:textSize="@dimen/fontsize.committee.label"/>

                <TextView
                    android:id="@+id/fvoting.territorial.code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/padding.committee.label"
                    android:paddingTop="@dimen/padding.committee.label"
                    android:gravity="center"
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/black"
                    android:text="Kod terytorialny"
                    android:textSize="@dimen/fontsize.committee.label"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height.login.separator.bottom"
                    android:layout_weight="1"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@android:color/black" />

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/light_gray_protocol">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="none"
                    android:maxLines="3"
                    android:paddingStart="@dimen/padding.fvoting.general.data"
                    android:paddingEnd="0dp"
                    android:textColor="@android:color/black"
                    android:paddingBottom="@dimen/padding.committee.label"
                    android:paddingTop="@dimen/padding.committee.label"
                    android:textSize="@dimen/fontsize.committee.label"
                    android:text="@string/fvoting.total.entitled.to.vote.label" />

                <TextView
                    android:id="@+id/fvoting.total.entitled.to.vote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:singleLine="true"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/padding.number.of.votes"
                    android:textColor="@android:color/black"
                    android:gravity="end"
                    android:paddingBottom="@dimen/padding.committee.label"
                    android:paddingTop="@dimen/padding.committee.label"
                    android:textSize="@dimen/fontsize.committee.label"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height.login.separator.bottom"
                    android:layout_weight="1"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@android:color/black" />

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/light_gray_protocol">

                <TextView
                    android:id="@+id/fvoting.total.voting.cards.label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="none"
                    android:maxLines="3"
                    android:paddingStart="@dimen/padding.fvoting.general.data"
                    android:paddingEnd="0dp"
                    android:textColor="@android:color/black"
                    android:paddingBottom="@dimen/padding.committee.label"
                    android:paddingTop="@dimen/padding.committee.label"
                    android:textSize="@dimen/fontsize.committee.label"
                    android:text="@string/fvoting.votingcardsdistributed.label" />

                <TextView
                    android:id="@+id/fvoting.total.voting.cards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:singleLine="true"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/padding.number.of.votes"
                    android:textColor="@android:color/black"
                    android:gravity="end"
                    android:paddingBottom="@dimen/padding.committee.label"
                    android:paddingTop="@dimen/padding.committee.label"
                    android:textSize="@dimen/fontsize.committee.label"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height.login.separator.bottom"
                    android:layout_weight="1"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@android:color/black" />

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/light_gray_protocol">

                <TextView
                    android:id="@+id/fvoting.valid.cards.label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="none"
                    android:maxLines="3"
                    android:paddingStart="@dimen/padding.fvoting.general.data"
                    android:paddingEnd="0dp"
                    android:textColor="@android:color/black"
                    android:paddingBottom="@dimen/padding.committee.label"
                    android:paddingTop="@dimen/padding.committee.label"
                    android:textSize="@dimen/fontsize.committee.label"
                    android:text="@string/fvoting.validcards.label" />

                <TextView
                    android:id="@+id/fvoting.valid.cards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:singleLine="true"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/padding.number.of.votes"
                    android:textColor="@android:color/black"
                    android:gravity="end"
                    android:paddingBottom="@dimen/padding.committee.label"
                    android:paddingTop="@dimen/padding.committee.label"
                    android:textSize="@dimen/fontsize.committee.label"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_gray_protocol">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height.login.separator.bottom"
                    android:layout_weight="1"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@android:color/black" />

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/light_gray_protocol">

                <TextView
                    android:id="@+id/fvoting.invalid.votes.label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="none"
                    android:paddingStart="@dimen/padding.fvoting.general.data"
                    android:paddingEnd="0dp"
                    android:textColor="@android:color/black"
                    android:paddingBottom="@dimen/padding.committee.label"
                    android:paddingTop="@dimen/padding.committee.label"
                    android:textSize="@dimen/fontsize.committee.label"
                    android:text="@string/fvoting.nonvalidvotes.label" />

                <TextView
                    android:id="@+id/fvoting.invalid.votes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:singleLine="true"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/padding.number.of.votes"
                    android:textColor="@android:color/black"
                    android:gravity="end"
                    android:paddingBottom="@dimen/padding.committee.label"
                    android:paddingTop="@dimen/padding.committee.label"
                    android:textSize="@dimen/fontsize.committee.label"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height.login.separator.bottom"
                    android:layout_weight="1"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@android:color/black" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_gray_protocol">

                <TextView
                    android:id="@+id/fvoting.valid.votes.label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="none"
                    android:paddingStart="@dimen/padding.fvoting.general.data"
                    android:paddingEnd="0dp"
                    android:textColor="@android:color/black"
                    android:paddingBottom="@dimen/padding.committee.label"
                    android:paddingTop="@dimen/padding.committee.label"
                    android:textSize="@dimen/fontsize.committee.label"
                    android:text="@string/fvoting.validvotes.label" />

                <TextView
                    android:id="@+id/fvoting.valid.votes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:singleLine="true"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/padding.number.of.votes"
                    android:textColor="@android:color/holo_purple"
                    android:gravity="end"
                    android:paddingBottom="@dimen/padding.committee.label"
                    android:paddingTop="@dimen/padding.committee.label"
                    android:textSize="@dimen/fontsize.committee.label"
                    />

            </TableRow>

        </TableLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/fvoting.layout.buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin.bottom.buttons"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fvoting.forward.button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="@dimen/margin.login.button.login.top"
            android:text="@string/forward.label.button"
            style="@style/green_button"/>

        <Button
            android:id="@+id/fvoting.next.button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="@dimen/margin.login.button.login.top"
            android:text="@string/next.label.button"
            style="@style/orange_button"/>

    </LinearLayout>

</RelativeLayout>
