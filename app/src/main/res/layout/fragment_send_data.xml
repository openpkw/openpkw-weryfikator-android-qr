<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/send.data.scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/send.data.forward.button">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp">

            <TextView
                android:id="@+id/send.data.label.top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding.committee.label"
                android:paddingTop="@dimen/padding.committee.label"
                android:paddingLeft="@dimen/padding.committee.label"
                android:paddingRight="@dimen/padding.committee.label"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="0dp"
                android:text="@string/scan_qr_label_enter_data"
                android:gravity="center"
                android:background="@android:color/white"
                android:textSize="@dimen/fontsize.committee.label" />

            <View
                android:id="@+id/send.data.separator.top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height.login.separator.top"
                android:layout_below="@id/send.data.label.top"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/send.data.label.committee.id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/send.data.separator.top"
                android:paddingLeft="@dimen/padding.committee.label"
                android:paddingRight="@dimen/padding.committee.label"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:paddingTop="@dimen/padding.committee.label"
                android:paddingBottom="@dimen/padding.committee.label"
                android:text="@string/committee_label"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fontsize.committee.label" />

            <View
                android:id="@+id/send.data.committee.label.separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height.login.separator.top"
                android:layout_below="@id/send.data.label.committee.id"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:id="@+id/send.data.committee.id.layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/send.data.committee.label.separator"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/send.data.periphery.number"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingBottom="@dimen/padding.committee.label"
                    android:paddingTop="@dimen/padding.committee.label"
                    android:gravity="center"
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/black"
                    android:text="Nr obwodu"
                    android:textSize="@dimen/fontsize.committee.label"/>

                <TextView
                    android:id="@+id/send.data.territorial.code"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingBottom="@dimen/padding.committee.label"
                    android:paddingTop="@dimen/padding.committee.label"
                    android:gravity="center"
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/black"
                    android:text="Kod terytorialny"
                    android:textSize="@dimen/fontsize.committee.label"/>
            </LinearLayout>

            <View
                android:id="@+id/send.data.committee.id.separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height.login.separator.top"
                android:layout_below="@+id/send.data.committee.id.layout"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/send.data.periphery.name"
                android:layout_below="@+id/send.data.committee.id.separator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding.committee.label"
                android:paddingTop="@dimen/padding.committee.label"
                android:paddingLeft="@dimen/padding.committee.label"
                android:paddingRight="@dimen/padding.committee.label"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/black"
                android:text="Nazwa"
                android:textSize="@dimen/fontsize.committee.label"/>

            <View
                android:id="@+id/send.data.committee.name.separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height.login.separator.top"
                android:layout_below="@+id/send.data.periphery.name"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/send.data.periphery.address"
                android:layout_below="@+id/send.data.committee.name.separator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding.committee.label"
                android:paddingTop="@dimen/padding.committee.label"
                android:paddingLeft="@dimen/padding.committee.label"
                android:paddingRight="@dimen/padding.committee.label"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/black"
                android:text="Adres"
                android:textSize="@dimen/fontsize.committee.address"/>

            <View
                android:id="@+id/send.data.committee.address.separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height.login.separator.top"
                android:layout_below="@+id/send.data.periphery.address"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/send.data.label.send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/send.data.committee.address.separator"
                android:layout_marginStart="@dimen/margin.login.left"
                android:layout_marginTop="10dp"
                android:text="@string/send.data.label.send"
                android:textSize="@dimen/fontsize.login.label"/>


            <Button
                android:id="@+id/send.data.button.send"
                android:layout_width="@dimen/width.login.button.login"
                android:layout_height="wrap_content"
                android:layout_below="@id/send.data.label.send"
                android:layout_marginStart="@dimen/margin.login.button.login.left"
                android:layout_marginTop="@dimen/margin.login.button.login.top"
                android:text="@string/scan.qr.buttonlabel.send"
                style="@style/orange_button"/>

            <View
                android:id="@+id/send.data.separator.button.send"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height.login.separator.bottom"
                android:layout_below="@id/send.data.button.send"
                android:layout_marginBottom="@dimen/margin.login.separator.bottom"
                android:layout_marginTop="10dp"
                android:background="@color/green" />
        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/send.data.forward.button"
        android:layout_width="@dimen/width.login.button.register"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin.bottom.buttons"
        android:layout_centerHorizontal="true"
        android:text="@string/forward.label.button"
        style="@style/green_button"/>

</RelativeLayout>
